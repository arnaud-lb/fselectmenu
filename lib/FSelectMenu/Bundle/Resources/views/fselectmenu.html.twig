
{% use "form_div_layout.html.twig" with choice_widget as orig_choice_widget %}

{# Symfony 2.0 #}
{% block fselectmenu_choice_widget %}
{% spaceless %}

    {{ fselectmenu(form.get('value'), choices, {
        'attrs': attr|merge({
            'id': id~'_html'
        }),
        'nativeAttrs': attr|merge({
            'id': id,
            'name': full_name
        }),
        'optionWrapperAttrs': {
            'id': id~'_options',
        },
        'emptyLabel': empty_value,
        'separator': separator,
        'preferredChoices': preferred_choices
    }) }}
{% endspaceless %}
{% endblock fselectmenu_choice_widget %}

{# Symfony 2.1 #}
{% block fselectmenu_choice_widget_2_1 %}
{% spaceless %}

    {{ fselectmenu2(form.get('value'), fselectmenu_convert_choice_views(choices), {
        'attrs': attr|merge({
            'id': id~'_html'
        }),
        'nativeAttrs': attr|merge({
            'id': id,
            'name': full_name
        }),
        'optionWrapperAttrs': {
            'id': id~'_options',
        },
        'emptyLabel': empty_value,
        'separator': separator,
        'preferredChoices': fselectmenu_convert_choice_views(preferred_choices)
    }) }}
{% endspaceless %}
{% endblock fselectmenu_choice_widget_2_1 %}

